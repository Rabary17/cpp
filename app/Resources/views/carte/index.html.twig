{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Numero</th>
                <th>Numserie</th>
                <th>Numclient</th>
                <th>Status</th>
                <th>Userid</th>
                <th>Action</th>
                <th>Datecreation</th>
                <th>Lastupdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td><a href="{{ path('carte_show', { 'id': carte.id }) }}">{{ carte.id }}</a></td>
                <td>{{ carte.type }}</td>
                <td>{{ carte.numero }}</td>
                <td>{{ carte.numSerie }}</td>
                <td>{{ carte.numClient }}</td>
                <td>{{ carte.status }}</td>
                <td>{{ carte.userId }}</td>
                <td>{{ carte.action }}</td>
                <td>{% if carte.dateCreation %}{{ carte.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if carte.lastUpdate %}{{ carte.lastUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('carte_show', { 'id': carte.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('carte_edit', { 'id': carte.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carte_new') }}">Create a new carte</a>
        </li>
    </ul>
{% endblock %}
